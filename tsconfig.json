{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, 
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["@types"],
    "jsx": "react-jsx"
    
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}